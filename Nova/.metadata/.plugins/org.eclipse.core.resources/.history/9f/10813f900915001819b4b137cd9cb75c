import java.io.IOException;

public class Main {
	public static void main(String args[]) throws IOException 
	{	
		System.out.print("Client standing up!");
		
		Client c;
		
		
		try {
			c= new Client("localhost",25565,5000);

			System.out.print("1");
			c.start();
			System.out.print("2");

			while (c.isAlive()) 
			{
				System.out.print("3");
				int i=-1;
				i = (int) System.in.read() - 48;
				if (i > 0) 
				{
					c.send(i);					
				}
				if (i ==0) {c.quit();}
			}
		} catch (Exception e) {
			System.out.println("haltam");}
	

	}
}
