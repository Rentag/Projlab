import java.io.IOException;

public class Input extends Thread {
	Client c;
	
	public Input(Client c) {this.c=c;}
	
	public void run() {try {
		int i=-1;
		System.out.println("kér: "+i);
		i = System.in.read();
		if (i!=1) 
		{
			System.out.println("bejött: "+i);
			c.send(i);
		} if (i==0) {c.quit();}
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}}
}
